@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lugares Turisticos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LugaresTuristicos.styles.css" asp-append-version="true" />
    

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jbbrygx1bh5lt8gzjxdzyob+bwve9eio7troutj/e=" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styleAdmin.css" />

    <script>
        // Desactivar clic derecho
        //document.addEventListener('contextmenu', function (e) {
        //    e.preventDefault();
        //});

        // Desactivar F12
        //document.onkeydown = function (e) {
        //    if (event.keyCode == 123) {
        //        return false;
        //    }
        //};
    </script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" style="text-decoration: none; color: black">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDarkDropdown" aria-controls="navbarNavDarkDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.IsInRole("ADMINISTRADOR"))
                {
                    <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="admin" asp-controller="Home" asp-action="Dashboard">Inicio</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" style="text-decoration: none; color: black" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Mantenimiento
                                </a>
                                <ul class="dropdown-menu">
                                    @*<li><a class="dropdown-item" asp-area="admin" asp-controller="Rol" asp-action="Index">Roles</a></li>*@
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vLugares">Lugares</a></li>
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vUsuarios">Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vCategorias">Categorias</a></li>
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vDepartamentos">Departamentos</a></li>
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vMunicipios">Municipios</a></li>
                                    <li><a class="dropdown-item" asp-area="admin" asp-controller="Home" asp-action="vBlackList">Lista negra</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="admin" asp-controller="Home" asp-action="vChangePass">Cambiar contraseña</a>
                            </li>
                        </ul>
                    </div>
                }
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApplication2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
