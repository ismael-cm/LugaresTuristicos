@section scripts {
    <script type="text/javascript">
        //variable global puntuación
        var puntuacion = 0;


        function saveValoracion(id) {
            let comentario = document.getElementById('v-comentario').value
            console.log('asdas')
            console.log(id)
            console.log(comentario)
