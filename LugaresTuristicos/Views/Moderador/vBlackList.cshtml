            <form id="Form1">
                <div class="modal-body">

                
                        @*<input asp-for="IdBlacklist" class="form-control" placeholder="IdBlacklist" hidden/>*@
                        <input id="Palabra" class="form-control" placeholder="Palabra" required />
                

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCerrar" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" id="btnGuardar" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal actualizar -->
<div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Mofificar palabra</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form id="Form2">
                    <input id="IdBlacklist2" class="form-control" placeholder="IdBlacklist" hidden />
                    <input id="Palabra2" class="form-control" placeholder="Palabra" required />
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnCerrar2" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnActualizar" class="btn btn-primary">Actualizar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        function cargarTabla() {
            $.ajax({
                url: '@Url.Action("getTablaBlackList", "Moderador")',
                type: 'post',
                dataType: 'json',
                cache: false
            }).done(function (resp) {
                //console.log(resp);
                var div = $("#contenido");
                var tabla = "<table id='tabla' class='fw-light table table-striped table-hover'><thead class='table-dark'><tr><th>Blacklist ID</th><th>Palabra</th><th>Acciones</th></tr></thead><tbody>";
                $.each(resp, function (index, blacklist) {
                    tabla += "<tr>";
                    tabla += "<td>" + blacklist.idBlacklist + "</td>";
                    tabla += "<td>" + blacklist.palabra + "</td>";

                    var texto = blacklist.palabra;
                    var textoModificado = texto.replace(/ /g, "-");

                    tabla += "<td><a data-bs-toggle='modal' data-bs-target='#exampleModal2' class='fw-light btn btn-light' onclick=cargarUpt('" + blacklist.idBlacklist + "&&" + textoModificado + "') >Editar</a> | <a class='fw-light btn btn-danger' href=\"javascript:cargarDel('" + blacklist.idBlacklist + "')\">Eliminar</a></td>";
                    tabla += "</tr>";
                });
                tabla += "</tbody></table>";
                div.empty();
                div.append(tabla);

                //$('#tabla').DataTable();

                var table = new DataTable('#tabla', {
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json',
                    },
                });

            }).fail();

        }

        function cargarDel(IdBlacklist) {
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger me-4'
                },
                buttonsStyling: false
            })

            swalWithBootstrapButtons.fire({
                title: 'Estas seguro?',
                text: "Una vez eliminado se pierde definitivamente!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Confirmar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("EliminarBlackList", "Moderador")',
                        type: 'post',
                        dataType: 'json',
                        cache: false,
                        data: { id: IdBlacklist }
                    }).done(function (resp) {
                        if (resp) {
                            swalWithBootstrapButtons.fire(
                                'Eliminado!',
                                'Tu registro ha sido elimando.',
                                'success'
                            )
                            cargarTabla();
                        } else {
                            swalWithBootstrapButtons.fire(
                                'Cancelado',
                                'Se omitieron los datos',
                                'error'
                            )
                        }
                    }).fail();
                } else if (
                    result.dismiss === Swal.DismissReason.cancel
                ) {
                    swalWithBootstrapButtons.fire(
                        'Cancelado',
                        'Se han omitido los datos',
                        'error'
                    )
                }
            })
        }

        function cargarUpt(valor) {

            var obj = valor.split('&&');
            var textoModificado = obj[1];
            var textoOriginal = textoModificado.replace(/-/g, " ");

            document.getElementById("IdBlacklist2").value = obj[0];
            document.getElementById("Palabra2").value = textoOriginal;


        }

        function limpiarCajas(){
            document.getElementById("Palabra").value = "";
        }

        function limpiarClases(){
            document.getElementById("Palabra").classList.remove("is-valid");
            document.getElementById("Palabra").classList.remove("is-invalid");

            document.getElementById("Palabra2").classList.remove("is-valid");
            document.getElementById("Palabra2").classList.remove("is-invalid");
        }

        $(document).ready(function () {

            var inputPalabra = document.getElementById("Palabra");
            function validarPalabra() {

                var valor = inputPalabra.value.trim();
                if (valor.length >= 4) {
                    inputPalabra.classList.add("is-valid");
                    inputPalabra.classList.remove("is-invalid");
                } else {
                    inputPalabra.classList.add("is-invalid");
                    inputPalabra.classList.remove("is-valid");
                }
            }

            inputPalabra.addEventListener("keypress", function () {
                validarPalabra();
            });

            inputPalabra.addEventListener("keydown", function () {
                setTimeout(validarPalabra, 0);
            });

            var inputPalabra2 = document.getElementById("Palabra2");
            function validarPalabra2() {

                var valor = inputPalabra2.value.trim();
                if (valor.length >= 4) {
                    inputPalabra2.classList.add("is-valid");
                    inputPalabra2.classList.remove("is-invalid");
                } else {
                    inputPalabra2.classList.add("is-invalid");
                    inputPalabra2.classList.remove("is-valid");
                }
            }

            inputPalabra2.addEventListener("keypress", function () {
                validarPalabra2();
            });

            inputPalabra2.addEventListener("keydown", function () {
                setTimeout(validarPalabra2, 0);
            });

            cargarTabla();

            $("#btnGuardar").click(function () {
                if ($("#Palabra").val() != "") {

                    var formulario = $("#Form1").serialize();
                    var inputsInvalidos = $("#Form1 .is-invalid").length;

                    if(inputsInvalidos === 0){
                        $.ajax({
                            url: '@Url.Action("guardarBlackList","Moderador")',
                            type: 'post',
                            cache: false,
                            dataType: 'json',
                            data: formulario
                        }).done(function (resp) {
                            if (resp) {
                                Swal.fire({
                                    title: 'El registro ha sido agregado correctamente',
                                    icon: 'success',
                                    confirmButtonText: 'Continuar'
                                })
                                cargarTabla();
                                $("#btnCerrar").click();
                                limpiarCajas();
                                limpiarClases();
                            } else {
                                Swal.fire({
                                    title: 'Hubo un error al momento de agregar el dato',
                                    icon: 'error',
                                    confirmButtonText: 'Continuar'
                                })
                            }
                        }).fail(function () {
                            Swal.fire({
                                title: 'Hubo un error al momento de agregar el dato',
                                icon: 'error',
                                confirmButtonText: 'Continuar'
                            })
                        });
                    }else{
                        Swal.fire({
                            title: 'Verifica los textos en rojo para continuar',
                            icon: 'error',
                            confirmButtonText: 'Continuar'
                        })
                    }
                } else {
                    Swal.fire({
                        title: 'Todos los campos son obligatorios',
                        icon: 'warning',
                        confirmButtonText: 'OK'
                    })
                }
                


            });



            $("#btnActualizar").click(function () {
                //console.log(1);
                if ($("#Palabra2").val() != "" && $("#IdBlacklist2").val() != "") {

                    var formulario = $("#Form2").serialize();
                    var inputsInvalidos2 = $("#Form2 .is-invalid").length;
                    var obj1 = document.getElementById("IdBlacklist2").value;
                    var obj2 = document.getElementById("Palabra2").value;

                    if(inputsInvalidos2 === 0){
                        $.ajax({
                            url: '@Url.Action("ActualizarBlackList","Moderador")',
                            type: 'post',
                            cache: false,
                            dataType: 'json',
                            data: { id: obj1, valor: obj2 }
                        }).done(function (resp) {
                            if (resp) {
                                Swal.fire({
                                    title: 'El registro ha sido modificado correctamente',
                                    icon: 'success',
                                    confirmButtonText: 'Continuar'
                                })
                                cargarTabla();
                                $("#btnCerrar2").click();
                            } else {
                                Swal.fire({
                                    title: 'Hubo un error al momento de actualizar el dato',
                                    icon: 'error',
                                    confirmButtonText: 'Continuar'
                                })
                            }
                        }).fail(function () {
                            Swal.fire({
                                title: 'Hubo un error al momento de actualizar el dato',
                                icon: 'error',
                                confirmButtonText: 'Continuar'
                            })
                        });
                    }else{
                        Swal.fire({
                            title: 'Verifica los textos en rojo para continuar',
                            icon: 'error',
                            confirmButtonText: 'Continuar'
                        })
                    }

                } else {
                    Swal.fire({
                        title: 'Todos los campos son obligatorios',
                        icon: 'warning',
                        confirmButtonText: 'OK'
                    })
                }
            });
        });
    </script>

}