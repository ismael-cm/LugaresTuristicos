@model List<Municipio>

<h2>Municipios</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo municipio</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre Municipio</th>
            <th>Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var municipio in Model)
        {
            <tr>
                <td>@municipio.Municipio1</td>
                <td>@municipio.IdDeptoNavigation.Departamento1</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Municipio" asp-route-id="@municipio.IdMunicipio">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Municipio" asp-route-id="@municipio.IdMunicipio">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ('@ViewBag.ErrorMessage' !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessage',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrect' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Municipio Registrado',
                    text: '@ViewBag.MessageCorrect',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrectEdit' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Municipio Actualizado',
                    text: '@ViewBag.MessageCorrectEdit',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.ErrorMessagePassword' !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessagePassword',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrectDelete' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Municipio Eliminado',
                    text: '@ViewBag.MessageCorrectDelete',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.ErrorMessageDelete' !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessageDelete',
                    confirmButtonText: 'Cerrar'
                });
            }
        });
    </script>
}