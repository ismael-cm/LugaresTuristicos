@model Lugare
 
<div class="valoracion mx-0 p-0">

    <!-- Estrella 1 -->
    <button id="star5_@Model.IdLugar" class="icon-button" onclick="valoracion(@Model.IdLugar, 5)">
        <i class="fas fa-star icon"></i>
    </button>

    <!-- Estrella 2 -->
    <button id="star4_@Model.IdLugar" class="icon-button" onclick="valoracion(@Model.IdLugar, 4)">
        <i class="fas fa-star icon"></i>
    </button>

    <!-- Estrella 3 -->
    <button id="star3_@Model.IdLugar" class="icon-button" onclick="valoracion(@Model.IdLugar, 3)">
        <i class="fas fa-star icon"></i>
    </button>

    <!-- Estrella 4 -->
    <button id="star2_@Model.IdLugar" class="icon-button" onclick="valoracion(@Model.IdLugar,2)">
        <i class="fas fa-star icon"></i>
    </button>

    <!-- Estrella 5 -->
    <button id="star1_@Model.IdLugar" class="icon-button" onclick="valoracion(@Model.IdLugar, 1)">
        <i class="fa fa-star icon"></i>
    </button>

</div>


<script>
    function valoracion(idLugar, idStar) {
        const stars = [
            document.getElementById(`star1_${idLugar}`),
            document.getElementById(`star2_${idLugar}`),
            document.getElementById(`star3_${idLugar}`),
            document.getElementById(`star4_${idLugar}`),
            document.getElementById(`star5_${idLugar}`),
        ]
        //Variable global puntuacion
      
        stars.forEach((star, index) => {
            if (index < idStar)
                star.style.color = '#F9D75D';
            else
                star.style.color = '#5f5050';
        })
    }
</script>