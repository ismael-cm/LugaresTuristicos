@model List<Categoria>

<h2>Categorias</h2>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Categoria">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre Categoria</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>
                    @categoria.NombreCategoria
                </td>
                <td>
                    <div class="form-group">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="Estado" checked="@categoria.Estado" disabled>
                        </div>
                    </div>
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Categoria" asp-route-id="@categoria.IdCategoria">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Categoria" asp-route-id="@categoria.IdCategoria">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ('@ViewBag.ErrorMessage' !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessage',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrect' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Categoria Registrada',
                    text: '@ViewBag.MessageCorrect',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrectEdit' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Categoria Actualizada',
                    text: '@ViewBag.MessageCorrectEdit',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.MessageCorrectDelete' !== '') {
                Swal.fire({
                    icon: 'success',
                    title: 'Categoria Eliminada',
                    text: '@ViewBag.MessageCorrectDelete',
                    confirmButtonText: 'Cerrar'
                });
            }
            if ('@ViewBag.ErrorMessageDelete' !== '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@ViewBag.ErrorMessageDelete',
                    confirmButtonText: 'Cerrar'
                });
            }
        });
    </script>
}