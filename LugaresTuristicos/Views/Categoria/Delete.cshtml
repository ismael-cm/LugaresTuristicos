@model Categoria

<h2>Delete Categoria</h2>

<p>¿Estás seguro de que deseas eliminar esta categoria?</p>

<table class="table">
    <tr>
        <th>ID Categoria</th>
        <td>@Model.IdCategoria</td>
    </tr>
    <tr>
        <th>Nombre Categoria</th>
        <td>@Model.NombreCategoria</td>
    </tr>
    <tr>
        <th>Estado</th>
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="Estado" checked="@Model.Estado" disabled>
                <input type="hidden" asp-for="Estado" />
            </div>
        </td>
    </tr>
</table>

<form asp-action="Delete" asp-controller="Categoria">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" asp-controller="Categoria" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
