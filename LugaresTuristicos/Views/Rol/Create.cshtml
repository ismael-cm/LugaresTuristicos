@model Rol

<h2>Crear rol</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mb-1">
        <label asp-for="NombreRol" class="control-label">Nombre del Rol</label>
        <input asp-for="NombreRol" class="form-control" />
        <span asp-validation-for="NombreRol" class="text-danger"></span>
    </div>
    <div class="form-group mb-1">
        <div class="form-check form-switch">
            <input class="form-check-input ml-2" type="checkbox" id="Estado" name="Estado" checked="@Model.Estado">
            <label class="form-check-label" for="Estado">Estado</label>
            @*<input type="hidden" asp-for="Estado" />*@
        </div>
    </div>

    <div class="col-12">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var checkbox = document.getElementById('Estado');
        var estadoInput = document.querySelector('input[name="Estado"]');

        checkbox.addEventListener('change', function () {
            estadoInput.value = checkbox.checked;
        });
    });
</script>
