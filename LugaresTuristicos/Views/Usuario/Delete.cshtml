@model Usuario

<h2>Eliminar usuario</h2>

<p>¿Estás seguro de que quieres eliminar este usuario?</p>

<table class="table">
    <tr>
        <th>ID Usuario</th>
        <td>@Model.IdUsuario</td>
    </tr>
    <tr>
        <th>Nombre</th>
        <td>@Model.Nombre</td>
    </tr>
    <tr>
        <th>Apellido</th>
        <td>@Model.Apellido</td>
    </tr>
    <tr>
        <th>Edad</th>
        <td>@Model.Edad</td>
    </tr>
    <tr>
        <th>Rol</th>
        <td>@Model.IdRolNavigation.NombreRol</td>
    </tr>
    <tr>
        <th>Correo</th>
        <td>@Model.Correo</td>
    </tr>
    <tr>
        <th>Estado</th>
        <td>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="Estado" checked="@Model.Estado" disabled>
            <input type="hidden" asp-for="Estado" />
        </div></td>
    </tr>
    <tr>
        <th>Cuenta Completada</th>
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="CuentaCompletada" checked="@Model.CuentaCompletada" disabled>
                <input type="hidden" asp-for="CuentaCompletada" />
            </div>
        </td>
    </tr>
    <tr>
        <th>Imagen</th>
        <td><img src="data:image;base64,@Convert.ToBase64String(Model.Imagen)" alt="Imagen" style="width: 40px; height: 40px;" /></td>
    </tr>
</table>

<form asp-action="Delete" asp-controller="Usuario">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" asp-controller="Usuario" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
